@using Domain

@model List<IM252Cliente>
<h2>Lista de Clientes</h2>
<a href="@Url.Action("Create", "Clientes")">Agregar Cliente</a>
<table>
    <tr>
        <th>Nombre</th>
        <th>Dirección</th>
        <th>Teléfono</th>
        <th>Correo</th>
        <th>Acciones</th>
    </tr>
    @foreach (var cliente in Model)
    {
        <tr>
            <td>@cliente.Nombre</td>
            <td>@cliente.Direccion</td>
            <td>@cliente.Telefono</td>
            <td>@cliente.Correo</td>
            <td>
                <a href="@Url.Action("Edit", "Clientes", new { id = cliente.ID })">Editar</a>
                <a href="@Url.Action("Delete", "Clientes", new { id = cliente.ID })">Eliminar</a>
            </td>
        </tr>
    }
</table>
